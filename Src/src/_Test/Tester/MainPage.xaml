<Page
    x:Class="Tester.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tester"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="QUARREL FEATURE TESTING" HorizontalAlignment="Center" Margin="0,0,0,12" FontSize="20"/>
            <Button Content="XSalsa20 (x64 only in testing)" Click="Button_Click" HorizontalAlignment="Stretch"/>
            <Button Content="Voice RT (x64 only in testing)" Click="Button_Click_1" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
            <Button Content="Mentions" Click="Button_Click_2" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
            <Button Content="Quarrel Presence" Click="Button_Click_3" HorizontalAlignment="Stretch" Margin="0,6,0,0"/>
        </StackPanel>
    </Grid>
</Page>
