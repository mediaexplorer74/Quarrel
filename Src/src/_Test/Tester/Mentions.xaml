<Page
    x:Class="Tester.Mentions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tester"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="Content" HorizontalAlignment="Center"/>
            <Button Content="Convert" HorizontalAlignment="Center" Click="Button_Click"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="Mention"/>
                <TextBlock x:Name="Username"/>
                <TextBlock x:Name="Desc"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
