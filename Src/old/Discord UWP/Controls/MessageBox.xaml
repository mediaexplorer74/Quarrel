                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="attachButtonScale" Storyboard.TargetProperty="ScaleY">
                <DiscreteDoubleKeyFrame KeyTime="0" Value="1.25"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="showMoreSymbol">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="moreSymbol" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="attachSymbol" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="attachButtonScale" Storyboard.TargetProperty="ScaleX">
                <DiscreteDoubleKeyFrame KeyTime="0" Value="1.25"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="attachButtonScale" Storyboard.TargetProperty="ScaleY">
                <DiscreteDoubleKeyFrame KeyTime="0" Value="1.35"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.35" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <Grid Padding="{Binding Padding, ElementName=uc}" Background="{Binding Background, ElementName=uc}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Uid="/Controls/SendMessageTB" Padding="52,12,96,12" VerticalAlignment="Stretch" x:Name="MessageEditor" PlaceholderText="Send message" TextChanged="MessageEditor_OnTextChanged" KeyDown="MessageEditor_OnKeyDown" LostFocus="MessageEditor_OnLostFocus" TextWrapping="Wrap" SelectionHighlightColor="{ThemeResource SystemControlBackgroundAccentBrush}" Style="{StaticResource TextBoxStyle1}" AcceptsReturn="False" MaxHeight="256" Paste="MessageEditor_Paste" KeyUp="MessageEditor_KeyUp"/>
        <Button x:Name="SendBox" Grid.Column="2" Style="{StaticResource SendButton}" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Right" VerticalAlignment="Stretch" Click="SendBox_OnClick" Grid.Row="0" IsEnabled="False" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" Width="48"/>
        
        <Popup x:Name="SuggestionPopup" IsOpen="False" Margin="24,0,0,0" Grid.ColumnSpan="2">
            <Popup.RenderTransform>
                <TranslateTransform x:Name="PopupTransform"/>
            </Popup.RenderTransform>
            <Border CornerRadius="4,4,0,0" SizeChanged="FrameworkElement_OnSizeChanged" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" BorderThickness="1,1,1,0" Background="{ThemeResource DeepBG}">
                <ListView x:Name="SuggestionBlock" Width="{Binding ActualWidth, ElementName=MessageEditor}" IsItemClickEnabled="True" ItemContainerStyle="{StaticResource SuggestionStyle}" ItemClick="SuggestionBlock_OnItemClick">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Top" Padding="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Height="24" Width="24" RadiusX="10" RadiusY="20" HorizontalAlignment="Left" Margin="0,0,8,0">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="{Binding image}"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontSize="13.333"  Text="{Binding name}" Grid.Column="1" Margin="0,0,6,0"/>

                                <TextBlock TextTrimming="CharacterEllipsis" VerticalAlignment="Center" TextAlignment="Right" FontSize="11" Opacity="0.5" Text="{Binding namealt}" Grid.Column="2" HorizontalAlignment="Right" Margin="6,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Popup>

        <Button x:Name="EmojiButton" HorizontalAlignment="Right" Margin="0,0,48,0" Foreground="{ThemeResource InvertedBG}" Style="{StaticResource ContentButton}" Opacity="1" Background="Transparent" Click="Button_Click" Padding="8">
            <SymbolIcon Symbol="Emoji"/>
        </Button>

        <HyperlinkButton x:Uid="/Dialogs/CancelBTN" x:Name="CancelButton" Visibility="Collapsed" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Right"  Style="{StaticResource PlainTextHyperlinkStyle}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" Content="Cancel" Margin="0,4,0,6" Click="CancelButton_Click"/>
        <Button x:Name="attachButton" Style="{StaticResource ContentButton}" Foreground="{ThemeResource InvertedBG}" Opacity="1" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="12" Click="Button_Click_1" Margin="4,0,0,0">
            <Grid>
                <Grid.RenderTransform>
                    <ScaleTransform x:Name="attachButtonScale" CenterX="10" CenterY="10"/>
                </Grid.RenderTransform>
                <SymbolIcon x:Name="moreSymbol" Symbol="More" Visibility="Visible"/>
                <SymbolIcon x:Name="attachSymbol" Symbol="Attach" Visibility="Collapsed"/>

            </Grid>
            <FlyoutBase.AttachedFlyout>
                <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle1}">
                    <MenuFlyoutItem x:Uid="/Controls/SearchGiphyMFI" Text="Search giphy" Click="AddGiphy_Click">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="BrowsePhotos"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem x:Uid="/Controls/AddAttachMFI"  Text="Add attachement" Click="AddAttachement_Click">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Attach"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem x:Uid="/Controls/SendSpotifyInvMFI" x:Name="spotifyInvite" Visibility="Collapsed" Text="Send Spotify invite" Click="SpotifyInvite" Foreground="#1DB954">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Play" Foreground="#1DB954"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </FlyoutBase.AttachedFlyout>
        </Button>
        <SymbolIcon x:Name="spotifyActive" Symbol="More" Opacity="0" Foreground="#1DB954" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" IsHitTestVisible="False"></SymbolIcon>

        <Grid x:Name="GiphySelect" Grid.Row="2" Grid.ColumnSpan="3" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ProgressRing x:Name="progring" Foreground="{ThemeResource Blurple}" Visibility="Visible"/>
            <ListView x:Name="GiphyList" Height="100" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.VerticalScrollMode="Disabled" SelectionMode="None" IsItemClickEnabled="True" ItemClick="GiphyList_ItemClick">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.Background>
                                <SolidColorBrush Color="{ThemeResource ForegroundColor}" Opacity="0.1"/>
                            </Grid.Background>
                            <Image Height="100" Width="{Binding AdjustedWidth}"  Source="{Binding Src}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" >
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="MinHeight" Value="0"/>
                        <Setter Property="MinWidth" Value="0"/>
                        <Setter Property="Margin" Value="1,0"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            <Button Style="{StaticResource DiscordOpaqueButton}" Padding="10,6" Background="{ThemeResource AcrylicMessageBackground}" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click_2">
                <FontIcon x:Name="Chevron" Grid.Column="2" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" Glyph="" Grid.ColumnSpan="4" FontSize="14"/>
            </Button>
            <TextBox x:Uid="/Controls/GiphySearchTBox" x:Name="giphySearch" PlaceholderText="Search with Giphy" Style="{StaticResource TextBoxStyle1}" VerticalAlignment="Bottom" Margin="0,0,0,6" TextChanged="TextBox_TextChanged" Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
